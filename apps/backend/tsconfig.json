{
  "compilerOptions": {
    "target": "ES2020", // VersiÃ³n de JS de salida
    "module": "CommonJS", // Node usa CommonJS
    "rootDir": "src", // Carpeta raÃ­z de tu cÃ³digo TS
    "outDir": "dist", // Carpeta donde se compila JS
    "strict": true, // Habilita todas las comprobaciones de TS
    "moduleResolution": "node", // ðŸ”‘ Para resolver imports correctamente
    "esModuleInterop": true, // ðŸ”‘ Para default import de CommonJS
